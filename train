result = model.train(data='/content/data.yaml',  # Path ke file dataset YAML
                     epochs=300,                 # Jumlah epoch
                     batch=8,                    # Batch size
                     imgsz=640,                  # Ukuran gambar (tinggi untuk small objects)
                     patience=100,               # Early stopping patienc 
                     mosaic=1.0,                 # Mosaic augmentation (turunkan ke 0.0 di akhir)
                     mixup=0.1,                  # Mixup (rendah untuk grayscale)
                     degrees=15.0,               # Rentang rotasi
                     translate=0.1,              # Rentang pergeseran
                     scale=0.3,                  # Rentang scaling (fokus small defects)
                     shear=0.0,                  # Shear (nonaktif untuk layar planar)
                     fliplr=0.5,                 # Flip horizontal
                     flipud=0.5,                 # Flip vertikal
                     multi_scale=True,           # Variasi ukuran gambar 
                     iou=0.6,                    # IoU threshold untuk NMS
                     conf=0.25,                  # Confidence threshold
                     max_det=300,                # Maksimal deteksi per gambar
                     box=8.0,                    # Bobot loss bounding box
                     cls=0.5,                    # Bobot loss klasifikasi
                     dfl=1.5,                    # Bobot loss distribution focal  
                     optimizer='AdamW',          # Optimizer
                     lr0=0.001,                  # Learning rate awal          
                     momentum=0.937,             # Momentum
                     weight_decay=0.0005,        # Weight decay
                     device='0',                 # Device GPU (ganti ke 'cpu' jika perlu)
                     workers=8,                  # Jumlah worker untuk data loader  
                     cache=True,                 # Cache dataset   
                     save=True,                  # Simpan checkpoint   
                     verbose=True,               # Log detail   
